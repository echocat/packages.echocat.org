        "@types/jest": "^29.5.2",
        "@typescript-eslint/eslint-plugin": "^6.18.1",
        "@typescript-eslint/parser": "^6.18.1",
        "eslint": "^8.43.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-config-typescript": "^3.0.0",
        "eslint-plugin-prettier": "^5.1.3",
        "better-sqlite3": "^9.2.2",
